<Window x:Class="WPF_gyakorlas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_gyakorlas" Background="	#161616"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock FontSize="20" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Foreground="White">Name</TextBlock>
        <TextBlock FontSize="20" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Foreground="White">Age</TextBlock>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Foreground="White">_____________</TextBlock>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Foreground="White">_____________</TextBlock>
        <TextBlock FontSize="20" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Foreground="White" Grid.ColumnSpan="2" >Age</TextBlock>

        <StackPanel Name="NameSp" Orientation="Vertical" Margin="20,50,20,20"  Background="#242424" Grid.Column="1">

        </StackPanel>

        <TextBlock Foreground="Red" FontSize="60" Width="350" Height="120" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Margin="-38,108,221,98">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-53.524"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            Out of order
        </TextBlock>

        <StackPanel Background="#242424" Name="AgeSp" Orientation="Vertical" Margin="20,50,20,20" Grid.Column="2">

        </StackPanel>


        <TextBox Background="#242424" Foreground="White" BorderThickness="0" Name="CreateNameTB" FontSize="20" Grid.Row="1" Grid.Column="1" Width="240" Height="30">
            Name
        </TextBox>

        <TextBox Background="#242424" Foreground="White" BorderThickness="0" Name="CreateAgeTB" Grid.Row="1" FontSize="20" Grid.Column="2" Width="240" Height="30">
            20
        </TextBox>

        <Button Background="#242424" Foreground="White" BorderThickness="0" Width="100" HorizontalAlignment="Left" FontSize="30" Name="Add" Click="Add_Click" Margin="20" Content="Create" Grid.Row="1">

        </Button>

        <Button Background="#242424" Foreground="White" BorderThickness="0" FontSize="30" Name="Delete" Width="100" HorizontalAlignment="Right" Click="Delete_Click" Margin="20" Content="Delete" Grid.Row="1">

        </Button>

    </Grid>
</Window>
